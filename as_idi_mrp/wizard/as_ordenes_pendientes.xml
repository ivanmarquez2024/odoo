<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="as_ordenes_pendientes_views" model="ir.ui.view">
        <field name="name">Reporte de Ordenes Pendientes</field>
        <field name="model">as.ordenes.pendientes</field>
        <field name="arch" type="xml">
            <form string="Reporte de Ordenes Pendientes">
                <group col="4">
                    <field name="start_date"/>
                    <field name="end_date"/>
                 
                    
                </group>
                <footer>
                    <button name="export_xls" 
                        default_focus="1"
                        string="Imprimir" 
                        type="object" 
                        class="oe_highlight"
                        context="{'xls_export':1}" 
                        icon="fa-download"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_ordenes_pendientes" model="ir.actions.act_window">
        <field name="name">Reporte de Ordenes Pendientes</field>
        <field name="res_model">as.ordenes.pendientes</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_ordenes_pendientes_views"/>
        <field name="target">new</field>
    </record>

    <report
        id="as_ordenes_pendientes_report"
        model="as.ordenes.pendientes"
        string="Ordenes pendientes por entregar"
        report_type="xlsx"
        name="as_idi_mrp.ordenes_pendientes.xlsx"
        file="as_idi_mrp.ordenes_pendientes.xlsx"
        attachment_use="False" />

    <menuitem
        id="as_ordenes_pendientes_id"
        name="Reporte de Ordenes Pendientes"
        action="action_ordenes_pendientes"
        parent="sale.menu_sale_report"    
        sequence="57" />

    
</data>
</odoo>
