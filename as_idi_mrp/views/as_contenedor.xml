<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_contenedor_tree" model="ir.ui.view">
            <field name="name">Contenedor</field>
            <field name="model">as.contenedor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="as_pesob_kg" />
                    <field name="as_peson_kg" />
                    <field name="as_pesob_lb" />
                    <field name="as_peson_lb" />
                    <field name="picking_id" invisible="True" />
                </tree>
            </field>
        </record>


        <record id="as_contenedor_form" model="ir.ui.view">
            <field name="name">Contenedor</field>
            <field name="model">as.contenedor</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        Contenedor
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="as_pesob_kg" />
                            <field name="as_peson_kg" />
                            <field name="as_pesob_lb" />
                            <field name="as_peson_lb" />
                            <field name="picking_id" invisible="True" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="as_machine_action" model="ir.actions.act_window">
            <field name="name">Contenedor</field>
            <field name="res_model">as.contenedor</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('as_contenedor_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('as_contenedor_form')})]" />
        </record>


    </data>
</odoo>